<!-- Config file for the engine -->

<config>
  <engine>
    <title>My platformer game</title>
    <maxFrameDuration value="16"/>
  </engine>

  <render>
    <vsync value="false"/>
  </render>

  <window>
    <resolution width="1920" height="1080" scale="1"/>
    <fullscreen value="true"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="true"/>
  </window>

  <scene>
	  <map path="Assets/Maps/" name="Intro.tmx"/>
	  <map1 path="Assets/Maps/" name="MapTemplate.tmx"/>
	  <textures>
		  <Menu_Pause path="Assets/Textures/UI/PauseMenu.png"/>
		  <Menu_Settings path="Assets/Textures/UI/Setting_menu.png"/>
		  <Feather path="Assets/Textures/UI/Feather.png"/>
	  </textures>
    <entities>
      <player x="784" y="600" w="128" h ="128" texture="Assets/Textures/player/caped_ikaro_placeholder2.png" gravity="true">
        <animations>
          <idle loop="true" speed ="0.5">
            <frame x="0" y="0" w="128" h="128"/>
          </idle>
        </animations>
      </player>
      <items>
        <item name="wax" x="200" y="672" w="32" h="32" isWax="true" isPicked="false" texture="Assets/Textures/wax.png" gravity="true">
          <animations>
            <idle loop="true" speed ="0.5">
              <frame x="0" y="0" w="32" h="32"/>
            </idle>
          </animations>
        </item>
      </items>

      <enemies>
        <enemy name="badguy" x="448" y="350" w="32" h="32" texture="Assets/Textures/enemy/Idle.png" gravity="true">
          <animations>
            <idle loop="true" speed ="0.5">
              <frame x="0" y="0" w="32" h="32"/>
              <frame x="32" y="0" w="32" h="32"/>
              <frame x="64" y="0" w="32" h="32"/>
              <frame x="96" y="0" w="32" h="32"/>
              <frame x="128" y="0" w="32" h="32"/>
              <frame x="160" y="0" w="32" h="32"/>
              <frame x="192" y="0" w="32" h="32"/>
              <frame x="224" y="0" w="32" h="32"/>
              <frame x="256" y="0" w="32" h="32"/>
            </idle>
          </animations>
          </enemy>
      </enemies>
            
    </entities>
  </scene>
	
</config>